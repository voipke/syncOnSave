{
    "name": "synconsave",
    "displayName": "syncOnSave",
    "description": "This is a VSCode extension for synchronizing files that automatically sync to a specified directory when the file is saved.",
    "author": "voipke <voipke@qq.com>",
    "publisher": "voipke",
    "icon": "resources/icon.png",
    "version": "0.0.12",
    "engines": {
        "vscode": "^1.55.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/voipke/syncOnSave.git"
    },
    "categories": [
        "Other"
    ],
    "files": [
        "README.md",
        "resources/",
        "out/",
        "package.json"
    ],
    "activationEvents": [
        "onFileSystem:file"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "syncOnSave.initConfigSyncFile",
                "title": "syncOnSave.initConfigSyncFile"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./ --outDir out",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test",
        "package": "vsce package --out dist"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.55.0",
        "@typescript-eslint/eslint-plugin": "^8.25.0",
        "@typescript-eslint/parser": "^8.25.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.21.0",
        "typescript": "^5.7.3"
    },
    "dependencies": {
        "minimatch": "^10.0.1"
    }
}