{
    "lang": "en",
    "targetFolders": [
      {
        "path": ".",
        "include": [
          "**/*.h",
          "**/*.hpp",
          "**/*.cc",
          "**/*.cxx",
          "**/*.cpp",
          "**/*.ui",
          "**/*.cmake",
          "**/CMakeLists.txt",
          "**/*.ts",
          "**/*.js"
        ],
        "exclude": [
          "node_modules/**",
          ".git/**",
          "github/**",
          "gitlab/**"
        ],
        "syncSwitcher": true,
        "createDir": true,
        "fileEncoderSelector": "lf"
      }
    ]
  }